{
  "name": "universal-sdk",
  "version": "1.0.0",
  "description": "A universal authentication SDK with provider-agnostic interface",
  "main": "dist/universal-sdk.umd.js",
  "module": "dist/universal-sdk.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build:types": "copyfiles -u 2 src/types/*.d.ts dist/",
    "build:umd": "webpack --config webpack.umd.config.js --mode production",
    "build:esm": "webpack --config webpack.esm.config.js --mode production",
    "build": "npm run build:umd && npm run build:esm && npm run build:types",
    "start": "webpack serve --config webpack.umd.config.js --mode development --open",
    "test": "jest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "auth0",
    "okta",
    "authentication",
    "login",
    "logout",
    "profile",
    "angular",
    "react",
    ".net"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/universal-sdk.git"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.7",
    "babel-loader": "^9.1.3",
    "copyfiles": "^2.4.1",
    "jest": "^29.7.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.1"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}